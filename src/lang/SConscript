Import('env')

include = ['#/include', '#/src', '#/src/config/msvc6', 'internal']

env.Append(CPPPATH=include)

objs = []

# Numeric classes
objs.append([
    'Long.cpp',
    'Short.cpp',
    'Integer.cpp',    
    'Float.cpp',
    'Double.cpp',    
])

# Char classes
objs.append([
    'Character.cpp',
])

# System classes
objs.append([
    'System.cpp',
])


obj = env.Object(objs)
Return('obj')